{
  "name": "wcmc-components",
  "version": "1.0.0",
  "description": "Reusable components for UNEP-WCMC projects",
  "main": "./dist/wcmc-components.common.js",
  "repository": {
    "url": "https://github.com/unepwcmc/components.git",
    "type": "git"
  },
  "author": "Will Kocur <will.kocur@unep-wcmc.org>",
  "license": "MIT",
  "homepage": "https://github.com/unepwcmc/components",
  "files": [
    "app/javascript*",
    "public/*",
    "dist/*"
  ],
  "dependencies": {
    "@rails/webpacker": "^3.4.1",
    "@turf/turf": "~5.0.0",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "es6-promise": "^4.2.4",
    "vue": "^2.5.16",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "vue-turbolinks": "^2.0.1",
    "vue2-touch-events": "^1.1.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^23.6.0",
    "jquery": "^3.3.1",
    "regenerator-runtime": "^0.13.1",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.2",
    "webpack-dev-server": "2.11.2"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --watchAll --verbose=false",
    "build-bundle": "vue-cli-service build --target lib --name wcmc-components ./app/javascript/index.js"
  },
  "jest": {
    "roots": [
      "app/javascript/components"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(vue.*)/)"
    ]
  }
}
